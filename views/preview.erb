<head>
  <meta charset=utf-8 />
  <title><%= map.name %></title>
  <link rel="stylesheet" href="/leaflet.css">
  <script src="/jquery-1.8.2.min.js"></script>
  <script src="/leaflet.js"></script>
  <style id="jsbin-css">
    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
    }
    #map {
      width: 100%;
      height: 100%;
      background: #CCC;
    }
  </style>
</head>
<body>
  <div id="map"></div>
<script>
  $(function() {
    var map, sw, ne, bounds;
    sw = new L.LatLng(<%= map.bounds[:sw][:lat] %>, <%= map.bounds[:sw][:lng] %>);
    ne = new L.LatLng(<%= map.bounds[:ne][:lat] %>, <%= map.bounds[:ne][:lng] %>);
    bounds = new L.LatLngBounds(sw, ne);
    layer = L.tileLayer('/<%= slug %>/{z}/{x}/{y}.png', {
      attribution: '<%= map.attribution %>'
    })
    map = L.map('map', {
      zoom: <%= map.zoom[:default] %>,
      center: bounds.getCenter(),
      minZoom: <%= map.zoom[:min] %>,
      maxZoom: <%= map.zoom[:max] %>,
      layers: [layer]
    });
  });
</script>
</body>
</html>
